<div class="container">
    <div class="header">
        <div class="menu">
            <a href="javascript:void(0)"
                onclick="window.location.assign('/inicial')">
                <span></span>
                <span></span>
                <span></span>
            </a>
        </div>
        <div class="col-filter">
            <% if (loggedInUser) { %>
            <p id="name">Bem-vindo, <span><%= loggedInUser %></span></p>
            <% } %>
            <a href="/logout" id="logout"><i class="fas fa-sign-out-alt"></i>
                Logout</a>
        </div>
    </div>

    <section class="pauta">
        <div class="box">
            <p class="pauta-title">üîò Pauta do dia <span id="minha-data"></span></p>
            <div class="box-table">
                <table class="concluido" id="concluidosTable">
                    <caption>
                        <p>Chamados Conclu√≠dos</p>
                    </caption>
                    <thead>
                        <tr>
                            <th scope="col">Chamado</th>
                            <th scope="col">Coment√°rio</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pautaActive.filter(db => db.data && new
                        Date(db.data).toISOString().split('T')[0] ===
                        dataAtual).forEach(db => { %>
                        <tr>
                            <th scope="row"><%= db.chamado %></th>
                            <td class="text"><%= db.comentario %></td>
                            <td><%= db.status %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <table class="pendentes" id="pendentesTable">
                    <caption>
                        <p>Chamados Pendentes</p>
                    </caption>
                    <thead>
                        <tr>
                            <th scope="col">Chamado</th>
                            <th scope="col">Coment√°rio</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pautaPausada.filter(data => data.status ===
                        '‚ùó Pendente').forEach(data => { %>
                        <tr>
                            <th scope="row"><%= data.chamado %></th>
                            <td class="text"><%= data.comentario %></td>
                            <td><%= data.status %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <footer
        style="font-size: 1.2em; padding: 1em; color: #040125; font-family: Arial, Helvetica, sans-serif; font-weight: 700;">
        <p style="text-align: center;">Sistema Criado Por Ihury Ferreira</p>
    </footer>
</div>

